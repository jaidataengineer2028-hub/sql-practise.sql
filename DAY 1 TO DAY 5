CREATE TABLE chamche(
 id INT,
 name VARCHAR(50),
 age INT NOT NULL,
 PRIMARY KEY(id,name)
);

INSERT INTO chamche VALUES(1, 'ankita bhandari' ,23);
INSERT INTO chamche VALUES(2, 'ankita bhandari' ,24);
INSERT INTO chamche VALUES(1, 'akshita' ,23);

SELECT*FROM chamche;

SELECT * FROM public.chamche
ORDER BY id ASC, name ASC 


CREATE TABLE payworkers(
 id INT PRIMARY KEY,
 name VARCHAR(50),
 age INT NOT NULL,
 CHECK (age>=18)
);

